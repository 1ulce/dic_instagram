<h2> 画像を編集する </h2>
<%= form_for(@picture, url: choose_new_or_edit) do |f| %>
  <%= f.error_messages! %>

  <div class="field">
    <%= picture_img(@picture.image.thumb) if picture_img(@picture.image.thumb) %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "画像一覧画面にもどる", pictures_path %>